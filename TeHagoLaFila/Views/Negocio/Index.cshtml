@model IEnumerable<TeHagoLaFila.Models.Negocio>

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("PowerUser"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<div class="row">
    @foreach (var item in Model)
    {
        var imageRoute = "/images/Negocio/negocio.png";
    <div class='col-sm-3 col-lg-3 col-md-3'>
        <div class="card">
            <center>
                <a asp-controller="Negocio" asp-action="Details" asp-route-id="@item.NegocioID">
                    <div class="border border-gray rounded">
                        <br />
                        <img width="150" height="150" class="rounded border" src="@imageRoute">
                        <div class="caption">
                            <h5>@Html.DisplayFor(modelItem => item.Nombre)</h5>
                            <hr />
                            <p><small>@item.Direccion</small></p>
                        </div>
                    </div>
                </a>
            </center>
        </div>
    </div>
    }
</div>

@if (User.IsInRole("PowerUser"))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.NegocioID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.NegocioID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.NegocioID">Delete</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
}