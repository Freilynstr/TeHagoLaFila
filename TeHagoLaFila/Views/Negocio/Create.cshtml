@model TeHagoLaFila.Models.Negocio

@{
    ViewData["Title"] = "Create";
}


<body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Crear Negocio</h4>
                            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Nombre">Nombre</label>
                                    <input asp-for="Nombre" type="text" class="form-control" required autofocus>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Descripcion">Descripción</label>
                                    <textarea style="height: 80px;" asp-for="Descripcion" class="form-control" rows="8" required autofocus></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Direccion">Dirección</label>
                                    <textarea style="height: 80px;" asp-for="Direccion" class="form-control" rows="8" required autofocus></textarea>
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CategoriaNegocioID" class="control-label"></label>
                                    <select asp-for="CategoriaNegocioID" class="form-control" asp-items=@(new SelectList(ViewBag.ListOfCategories, "CategoriaNegocioID", "Nombre"))></select>
                                    <span asp-validation-for="CategoriaNegocioID" class="text-danger"></span>
                                </div>
                                <div class="form-group no-margin">
                                    <center>
                                        <label class="control-label text-warning">Al registrar un Negocio, tendrás que volver a iniciar sesión</label>
                                        <button type="submit" class="btn btn-primary btn-block">
                                            Registrar Negocio
                                        </button>
                                    </center>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

