@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "TeHagoLaFila";
}

<div class="row">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/images/img-01.png" alt="IMG" class="img-responsive" />
                </div>

                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="login100-form validate-form">
                        <span class="login100-form-title">
                            User Login
                        </span>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <input asp-for="Email" class="form-control input100" placeholder="E-mail" />
                            <span class="focus-input100"></span>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="form-group wrap-input100 validate-input" data-validate="Password is required">
                            <input asp-for="Password" class="form-control input100" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="form-group container-login100-form-btn">
                            <button type="submit" class="btn login100-form-btn">Log in</button>
                        </div>

                        <div class="form-group text-center p-t-12">
                            <span class="txt1">
                                Forgot
                            </span>
                            <a class="txt2" asp-action="ForgotPassword">
                                Username / Password?
                            </a>
                        </div>

                        <div class="form-group text-center p-t-136">
                            <a asp-action="Register" class="txt2" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                Create your Account
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
